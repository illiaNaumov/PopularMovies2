<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid_view_MoviePosterView"
        android:padding="0dp"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/posterImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/posterImage"
        android:layout_alignTop="@+id/posterImage"
        android:layout_alignRight="@+id/posterImage"
        android:layout_alignBottom="@+id/posterImage"
        android:layout_margin="1dp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />
</FrameLayout>